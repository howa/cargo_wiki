%h1 S'identifier

= form_tag sessions_path do
  .input
    = label_tag :username
    = text_field_tag :username, params[:email], :autofocus => true

  .input
    = label_tag :password
    = password_field_tag :password

  .input
    = check_box_tag :remember_me, 1, params[:remember_me]
    = label_tag :remember_me

  .actions
    = submit_tag "Login"