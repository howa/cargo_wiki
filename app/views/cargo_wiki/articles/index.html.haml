- unless @tag.blank?
  %h1 #{@tag.name} - Articles
- else
  %h1 Articles

- if signed_in? and @tag.blank?
  .toolbar
    = link_to 'New Article', new_article_path

%table.list.articles
  %thead
    %tr
      %th Title
      %th Author
      %th Last Update by
      %th Last Update Date

      - if @tag.blank?
        %th Actions

  %tbody
    - @articles.each do |article|
      %tr{ :id => "article-#{article.id}" }
        %td= link_to article.title, article
        %td= article.author.username
        %td= article.last_update_by.username
        %td= l article.updated_at, :format => :short

        -if @tag.blank?
          %td.actions
            = link_to 'History', article_versions_path(article)

            - if signed_in?
              |
              = link_to 'Edit', edit_article_path(article)

              - if current_user.admin?
                |
                = link_to 'Destroy', article, :confirm => 'Are you sure?', :method => :delete
