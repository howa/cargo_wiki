%h1 History

- unless @article.nil?
  .toolbar
    = link_to "Back to article", @article

%table.list
  %thead
    %tr
      - if @article.nil?
        %th Article
      %th Commit message
      %th Changes by
      %th Date

  %tbody
    - @versions.each do |version|
      %tr{ :id => "version-#{version.id}" }
        - if @article.nil?
          %td= link_to version.item.title, version.item
        %td= version.commit_message
        %td= version.created_by.username
        %td=l version.created_at, :format => :short